{
    "manifest_version": 3,
    "name": "Background Color Changer",
    "version": "1.0",
    "description": "ワンクリックで開いているページの背景色を変更する拡張機能です。",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png"
      }
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}